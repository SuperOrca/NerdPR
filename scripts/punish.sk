options:
	prefix: &7&lPUNISH &8|

on chat:
	if event is not canceled:
		if {mute::%player's uuid%::type} is set:
			if {mute::%player's uuid%::type} is "temp":
				set {_waited} to time since {mute::%player's uuid%::time}
				if {_waited} < {mute::%player's uuid%::span}:
					send "{@prefix} <##1063e8>&lTEMPMTUE%nl%&7Muted by: <##2273f5>%{mute::%player's uuid%::by}%%nl%&7Reason: <##2273f5>%{mute::%player's uuid%::reason}%%nl%&7Time left: <##2273f5>%difference between {mute::%player's uuid%::span} and {_waited}%"
					cancel event
				else:
					delete {mute::%player's uuid%::*}
			else if {mute::%player's uuid%::type} is "perm":
				send "{@prefix} <##1063e8>&lMUTE%nl%&7Muted by: <##2273f5>%{mute::%player's uuid%::by}%%nl%&7Reason: <##2273f5>%{mute::%player's uuid%::reason}%"
				cancel event
		if {chatmute} is true:
			if player doesn't have permission "rank.staff":
				send "&cChat is currently muted."
				cancel event

on join:
	if {ban::%player's uuid%::type} is set:
		if {ban::%player's uuid%::type} is "temp":
			set {_waited} to time since {ban::%player's uuid%::time}
			if {_waited} < {ban::%player's uuid%::span}:
				kick player due to "{@prefix} &6&lTEMPBAN%nl%&eBanned by: <##2273f5>%{ban::%player's uuid%::by}%%nl%&eReason: <##2273f5>%{ban::%player's uuid%::reason}%%nl%&eTime left: <##2273f5>%difference between {ban::%player's uuid%::span} and {_waited}%"
				set join message to ""
			else:
				delete {ban::%player's uuid%::*}
		else if {ban::%player's uuid%::type} is "perm":
			kick player due to "{@prefix} &6&lBAN%nl%&eBanned by: <##2273f5>%{ban::%player's uuid%::by}%%nl%&eReason: <##2273f5>%{ban::%player's uuid%::reason}%"
			set join message to ""

command /tempban <offline player> <text> <text>:
	permission: punish.tempban
	permission message: &cNo Permission.
	usage: &7Usage: /tempban <player> <time ex:24h> <reason> [-s]
	trigger:
		set {_time} to formatTime(arg-2)
		set {ban::%arg-1's uuid%::type} to "temp"
		set {ban::%arg-1's uuid%::by} to player
		set {ban::%arg-1's uuid%::time} to now
		set {ban::%arg-1's uuid%::span} to {_time}
		set {_reason} to arg-3
		replace all " -s" with "" in {_reason}
		set {ban::%arg-1's uuid%::reason} to {_reason}
		kick arg-1 due to "{@prefix} &7You were tempbanned by <##2273f5>%player%&7 for <##2273f5>%{_time}%&7 for <##2273f5>%{_reason}%&7."
		if arg-3 contains "-s":
			send "&7[SILENT] {@prefix} <##2273f5>%arg-1%&7 was banned by <##2273f5>%player%&7 for <##2273f5>%{_time}%&7 for <##2273f5>%{_reason}%&7." to all players where [input has permission "rank.staff"]
		else:
			broadcast "{@prefix} <##2273f5>%arg-1%&7 was banned by <##2273f5>%player%&7 for <##2273f5>%{_time}%&7 for <##2273f5>%{_reason}%&7."

command /ban <offline player> <text>:
	permission: punish.ban
	permission message: &cNo Permission.
	usage: &7Usage: /ban <player> <reason> [-s]
	trigger:
		set {ban::%arg-1's uuid%::type} to "perm"
		set {ban::%arg-1's uuid%::by} to player
		set {_reason} to arg-2
		replace all " -s" with "" in {_reason}
		set {ban::%arg-1's uuid%::reason} to {_reason}
		kick arg-1 due to "{@prefix} &7You were permanently banned by <##2273f5>%player%&7 for <##2273f5>%{_reason}%&7."
		if arg-2 contains "-s":
			send "&7[SILENT] {@prefix} <##2273f5>%arg-1%&7 was banned by <##2273f5>%player%&7 for <##2273f5>%{_reason}%&7." to all players where [input has permission "rank.staff"]
		else:
			broadcast "{@prefix} <##2273f5>%arg-1%&7 was banned by <##2273f5>%player%&7 for <##2273f5>%{_reason}%&7."

command /unban <offline player> [<text>]:
	permission: punish.unban
	permission message: &cNo Permission.
	usage: &7Usage: /unban <player> [-s]
	trigger:
		delete {ban::%arg-1's uuid%::*}
		if arg-2 contains "-s":
			send "&7[SILENT] {@prefix} <##2273f5>%arg-1%&7 was unbanned by <##2273f5>%player%&7." to all players where [input has permission "rank.staff"]
		else:
			broadcast "{@prefix} <##2273f5>%arg-1%&7 was unbanned by <##2273f5>%player%&7."

command /kick <player> <text>:
	permission: punish.kick
	permission message: &cNo Permission.
	usage: &7Usage: /kick <player> <reason> [-s]
	trigger:
		set {_reason} to arg-2
		replace all "-s" with "" in {_reason}
		kick arg-1 due to "{@prefix} &7You were kicked by <##2273f5>%player% for <##2273f5>%{_reason}%&7."
		if arg-2 contains "-s":
			send "&7[SILENT] {@prefix} <##2273f5>%arg-1%&7 was kicked by <##2273f5>%player%&7 for <##2273f5>%{_reason}%&7." to all players where [input has permission "rank.staff"]
		else:
			broadcast "{@prefix} <##2273f5>%arg-1%&7 was kicked by <##2273f5>%player%&7 for <##2273f5>%{_reason}%&7."

