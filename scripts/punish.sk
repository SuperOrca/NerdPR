command /clearchat [<text>]:
	permission: punish.clearchat
	permission message: &cNo Permission.
	trigger:
		loop 200 times:
			broadcast ""
		if arg-1 contains "-a":
			broadcast "{@prefix} &7The chat was cleared."
		else:
			broadcast "{@prefix} &7The chat was cleared by <##2273f5>%player%&7."

command /mutechat [<text>]:
	permission: punish.mutechat
	permission message: &cNo Permission.
	aliases: /chatmute
	trigger:
		if {chatmute} is not set:
			set {chatmute} to true
			if arg-1 contains "-a":
				broadcast "{@prefix} &7The chat was muted."
			else:
				broadcast "{@prefix} &7The chat was muted by <##2273f5>%player%&7."
		else:
			delete {chatmute}
			if arg-1 contains "-a":
				broadcast "{@prefix} &7The chat was unmuted."
			else:
				broadcast "{@prefix} &7The chat was unmuted by <##2273f5>%player%&7."
