command /clearchat [<text>]:
	permission: punish.clearchat
	permission message: &cNo Permission.
	trigger:
		loop 200 times:
			broadcast ""
		if arg-1 contains "-a":
			broadcast "{@prefix} &7The chat was cleared."
		else:
			broadcast "{@prefix} &7The chat was cleared by <##f781ed>%player ? ""Console""%&7."
		send "Chat was cleared by `%player ? ""Console""%`." to channel with id "{@punishment-channel}" with "{@bot}"

command /mutechat [<text>]:
	permission: punish.mutechat
	permission message: &cNo Permission.
	aliases: /chatmute
	trigger:
		if {chatmute} is not set:
			set {chatmute} to true
			if arg-1 contains "-a":
				broadcast "{@prefix} &7The chat was muted."
			else:
				broadcast "{@prefix} &7The chat was muted by <##f781ed>%player ? ""Console""%&7."
			send "Chat was muted by `%player ? ""Console""%`." to channel with id "{@punishment-channel}" with "{@bot}"
		else:
			delete {chatmute}
			if arg-1 contains "-a":
				broadcast "{@prefix} &7The chat was unmuted."
			else:
				broadcast "{@prefix} &7The chat was unmuted by <##f781ed>%player ? ""Console""%&7."
			send "Chat was unmuted by `%player ? ""Console""%`." to channel with id "{@punishment-channel}" with "{@bot}"